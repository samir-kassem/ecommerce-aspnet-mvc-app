
<!--

	To get the user name of the currently authenticated user:

	@using Microsoft.AspNetCore.Identity;

	@inject UserManager<ApplicationUser> UserManager;


	@UserManager.GetUserName(User)


-->

@if (!User.Identity.IsAuthenticated)
{
	<a class="btn btn-outline-success my-2 my-sm-0" style="margin-right:.5rem; margin-left:.5rem;" asp-controller="Account" asp-action="Login">
		<i class="bi bi-box-arrow-in-right"></i> Log In
	</a>


	<a class="btn btn-outline-primary my-2 my-sm-0" style="margin-right:.5rem; margin-left:.5rem;" asp-controller="Account" asp-action="Register">
		<i class="bi bi-person-plus"></i> Register
	</a>
}
else
{
	<form asp-controller="Account" asp-action="Logout" style="margin-right:.5rem; margin-left:.5rem;">
		<button class="btn btn-outline-danger">
			<i class="bi bi-box-arrow-right"></i> Log Out
		</button>
	</form>
}



